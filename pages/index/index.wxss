/* model end */

/* loading */
.loading {
  padding: 10rpx;
  text-align: center;
  font-size: 28rpx;
  color: #333;
}

.loading-before {
  display: inline-block;
  margin-right: 5rpx;
  vertical-align: middle;
  content: '';
  width: 40rpx;
  height: 40rpx;
  /* background: url(../../images/load.png) no-repeat; */
  /* background-size: contain; */
  animation: rotate 1s linear infinite;
}

.loading.complete:before {
  display: none;
}
