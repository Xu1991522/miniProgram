/* pages/qualityHistory/qualityHistory.wxss */
.qualityHistory-container{
  position: relative;
  flex: auto;
  display: flex;
  flex-direction: column;
  background: #fcfcfc;
}

/* item-banner */
.item-qHistory-banner{
  position: relative;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 40rpx 0 60rpx 0;
}

.banner-img{
  position: relative;
  width: 150rpx;
  height: 150rpx;
}

.banner-txt{
  font-size: 28rpx;
  color: #595959;
  margin-top: 30rpx;
}

/* item-qHistory-list */
.item-qHistory-list{
  position: relative;
  width: 100%;
  background-color:#FCFCFC; 
  height: auto;
  display: flex;
  flex-direction: column;
  /* padding: 60rpx 0; */
}

.list-txt-color{color: #939393;}

.list-block-time,.list-block-axie,.block-img{margin-right: 12rpx;}

.qHistory-list-block{
  position: relative;width: 86%;margin: 0 auto;justify-content: center;
  display: flex;
  flex-direction: row;
  min-height: 240rpx;
}

.list-block-time{
  display: flex;
  flex-direction: column;
  /* justify-content: flex-end; */
  align-items: flex-end;
  padding-left:0%;
}

.time-txt,.status-txt{
  font-size: 28rpx;
  color: #595959;
  margin-bottom: 16rpx;
}

.list-block-axie{
  display: flex;
  flex-direction: column;
  position: relative;min-width:0.5rem;align-items: center;
}

.axie-top{margin-top:4rpx;}

.axie-cicle{
  display: inline-block;width: 16rpx;height: 16rpx;border-radius: 8rpx;background-color: #D8D8D8;margin: 6rpx 0;
}

.axie-line{display: inline-block;width: 2rpx;background-color: #E6E6E6;height: 280rpx;}

.line01{height: 8rpx !important;margin-bottom: 4rpx;}

.block-img{
  width: 30rpx;
  height: 30rpx;
}

.list-block-status{
  position: relative;
  display: flex;
  flex-direction: column;
  height:220rpx;
  border-bottom: 1px solid #E6E6E6;
  /* padding-right:50rpx; */
  padding-bottom: 50rpx;
}

/* no-RecordHistory */
.no-RecordHistory{
  position: relative;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.no-img{
  width: 165rpx;
  height: 200rpx;
  margin-top:20%;
}

.no-txt{
  font-size: 32rpx;
  margin-top: 40rpx;
  color: #ccc;
}

/* loading */
.loading {
  padding: 10rpx;
  text-align: center;
  font-size: 28rpx;
  color: #333;
}

.loading-before {
  display: inline-block;
  margin-right: 5rpx;
  vertical-align: middle;
  content: '';
  width: 40rpx;
  height: 40rpx;
  /* background: url(../../images/load.png) no-repeat; */
  /* background-size: contain; */
  animation: rotate 1s linear infinite;
}

.loading.complete:before {
  display: none;
}